    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "scripts": {
