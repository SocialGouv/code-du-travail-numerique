{
  "name": "@socialgouv/cdtn-ui",
  "version": "4.51.0",
  "description": "Composants ReactJS",
  "homepage": "https://github.com/SocialGouv/code-du-travail-numerique/tree/master/packages/react-ui#react-ui-socialgouvreact-ui",
  "main": "./lib/index.esm.js",
  "module": "./lib/index.esm.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "NODE_ENV=production rollup --config",
    "lint-js": "eslint src/**/*.js",
    "lint-css": "stylelint 'src/**/*.js'",
    "lint": "yarn lint-js && yarn lint-css",
    "precommit": "lint-staged",
    "prepush": "yarn test --bail --changedSince=master",
    "start": "start-storybook",
    "svg": "svgo --config=src/icons/mono.config.js -f src/icons/src/monochrome && svgo --config=src/icons/bi.config.js -f src/icons/src/bicolor && npx @svgr/cli --icon --no-dimensions -d src/icons/components src/icons/src",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "watch": "yarn build --watch",
    "test": "jest"
  },
  "peerDependencies": {
    "prop-types": "15.x",
    "react": "17.x",
    "react-dom": "17.x",
    "styled-components": "5.x"
  },
  "dependencies": {
    "@reach/dialog": "0.15.3",
    "polished": "^4.1.3",
    "react-accessible-accordion": "^3.3.4",
    "react-feather": "^2.0.9",
    "react-tabs": "^3.2.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "use-onclickoutside": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.13",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-react": "7.12.13",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@socialgouv/eslint-config-react": "^1.59.0",
    "@storybook/addon-a11y": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-storysource": "^6.1.21",
    "@storybook/components": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@svgr/cli": "^5.5.0",
    "@svgr/core": "^5.5.0",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "7.0.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.21.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^11.0.0",
    "npx": "^10.2.2",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "17.x",
    "rollup": "^2.40.0",
    "rollup-plugin-babel": "^4.4.0",
    "styled-components": "^5.2.1",
    "stylelint": "^13.11.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "svgo": "^2.2.2"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "ui"
  ],
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint-css",
      "yarn lint-js --fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "browserslist": [
    "last 2 version",
    "> 1% in FR",
    "ie 11",
    "not dead"
  ]
