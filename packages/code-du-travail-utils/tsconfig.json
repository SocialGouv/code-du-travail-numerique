{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "lib": ["es2024"],
    "outDir": "./build",
    "rootDir": "src",
    "declaration": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    /* Module Resolution Options */
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "jsx": "react-jsx",
    "types": ["jest"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build"]
}
