{
  "name": "@socialgouv/code-du-travail",
  "private": true,
  "license": "MIT",
  "description": "Code du travail",
  "homepage": "https://github.com/SocialGouv/code-du-travail-numerique#readme",
  "scripts": {
    "build": "lerna run build",
    "build:ui": "lerna run build --scope={@socialgouv/cdtn-ui,@socialgouv/react-fiche-service-public,@socialgouv/modeles-social,@cdt/frontend}",
    "build:npm": "lerna run build --scope={@socialgouv/cdtn-ui,@socialgouv/react-fiche-service-public}",
    "clean": "lerna clean",
    "dev:docker": "docker-compose up elasticsearch",
    "dev": "lerna run dev --parallel",
    "dev:api": "lerna run dev --scope=@cdt/api --stream",
    "dev:type-check": "lerna run type-check:watch --scope=@cdt/api --stream",
    "dev:frontend": "lerna run dev --parallel --scope={@cdt/frontend,@socialgouv/cdtn-ui,@socialgouv/react-fiche-service-public,@socialgouv/modeles-social}",
    "test:frontend": "yarn workspace @cdt/frontend test:watch",
    "dev:frontend:preprod-api": "API_URL=https://api-preprod-code-du-travail-numerique.dev.fabrique.social.gouv.fr/api/v1 yarn dev:frontend",
    "k8s": "yarn --silent --cwd .k8s",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "start": "lerna run start",
    "storybook:run": "lerna run start --scope=@socialgouv/cdtn-ui",
    "storybook:deploy": "lerna run deploy-storybook --scope=@socialgouv/cdtn-ui", 
    "storybook:deploy:action": "lerna run deploy-storybook:action --scope=@socialgouv/cdtn-ui",
    "test": "lerna run test",
    "test:modeles": "lerna exec --scope=@socialgouv/modeles-social -- yarn test",
    "test:e2e": "yarn dev:frontend:preprod-api & lerna run test:e2e --scope=@cdt/e2e --stream",
    "test:e2e:ui": "lerna run test:e2e:ui --scope=@cdt/e2e --stream",
    "test:update": "lerna run test:update --scope={@socialgouv/cdtn-ui,@socialgouv/react-fiche-service-public,@cdt/frontend}",
    "prepare": "is-ci || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SocialGouv/code-du-travail-numerique.git"
  },
  "bugs": {
    "url": "https://github.com/SocialGouv/code-du-travail-numerique/issues"
  },
  "dependencies": {
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "lerna": "^4.0.0"
  },
  "resolutions": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.0"
  },
  "workspaces": {
    "packages": [
      "infra/*",
      "modules/*",
      "packages/*",
      "packages/code-du-travail-data/*"
    ]
  },
  "engines": {
    "node": ">= v14.17.5"
  },
  "version": "0.0.0"
}
